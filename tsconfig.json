{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "react-jsx",
    "lib": ["DOM", "ESNext", "DOM.Iterable", "ScriptHost"],
    "types": ["vite/client", "node"],
    "moduleResolution": "bundler",
    "module": "Node16",
    "target": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "vite.config.ts"]
}
