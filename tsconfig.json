{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "react-jsx",
    "lib": ["DOM", "ESNext", "DOM.Iterable", "ScriptHost"],
    "types": ["node"],
    "moduleResolution": "node16",
    "module": "Node16",
    "target": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true
  }
}
